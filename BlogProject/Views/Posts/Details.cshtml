@model Post

<div class="row">
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb-4">@Model.PostTitle</h1>
            <div class="tags">
            <div>
                @foreach(var tag in @Model.Tags) {
                    <a href="/posts/tag/@tag.TagUrl" class="badge bg-@tag.TagColor bg-opacity-10 text-@tag.TagColor mb-2 fw-bold">@tag.TagText</a>
                }
            </div>
           </div>
            <img src="~/img/@Model.PostImage" class="img-fluid rounded" alt="">
            <div>@Model.PostContet</div>
        </div>
        <div class="bg-white mt-3">
            <div class="card-border-0">
                <div class="card-header pb-0">
                    <h4>There are @Model.Comments.Count() comments here</h4>
                </div>
                <div class="card-body">
                    @foreach(var comment in Model.Comments) {
                      <div class="d-flex my-4">
                        <img src="/img/@comment.User.UserImage" alt="" class="avatar rounded-circle float-start me-3">
                        <div>
                         <div class="mb-2">
                            <h6>@comment.User.UserName</h6>
                            <span>@comment.CommentPublishedOn</span>
                         </div>
                         <p>@comment.CommentText</p>
                        </div>
                      </div>
                    }
                    <hr class="my-4">
                    <form action="/posts/AddComment" method="post">
                     <input type="hidden" name="PostId" id="@Model.PostId">

                     <div class="mb-3">
                      <label for="UserName" class="form-label">User name</label>
                      <input type="text" name="UserName" id="UsernName" class="form-control">
                     </div>

                     <div class="mb-3">
                      <label for="CommentText" class="form-label">User name</label>
                      <textarea type="text" name="CommentText" id="CommentText" class="form-control"></textarea>
                     </div>
                     <div class="col-md-12">
                        <button type="submit" class="btn btn-outline-info">Add comment</button>
                     </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
           <vc:tags-menu></vc:tags-menu>
           <vc:new-posts></vc:new-posts>
            
    </div>
</div>