@model Post

<div class="row">
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb-4 text-decoration-none">@Model.PostTitle</h1>
            <div class="tags">
            <div>
                @foreach(var tag in @Model.Tags) {
                    <a href="/posts/tag/@tag.TagUrl" class="badge bg-@tag.TagColor bg-opacity-10 text-@tag.TagColor mb-2 fw-bold">@tag.TagText</a>
                }
            </div>
           </div>
            <img src="~/img/@Model.PostImage" class="img-fluid rounded" alt="">
            <ul class="list-inline my-3">
                <li class="list-inline-item "><i class="bi bi-calendar"></i> @Model.PostPublishedOn.ToString("d")</li>
                 <li class="list-inline-item "><i class="bi bi-person-circle"></i> <a href="/profile/@Model.User.UserName">@Model.User.UserName</a></li>
            </ul>
            <div>@Model.PostExp</div>
        </div>
        <div class="bg-white mt-3">
            <div class="card-border-0">
                <div class="card-header pb-0">
                    <h4>There are @Model.Comments.Count() comments here</h4>
                </div>
                <div class="card-body">
                   
                    @foreach(var comment in Model.Comments) {
                      <div class="d-flex my-4">
                        <img src="/img/@comment.User.UserImage" alt="" class="avatar rounded-circle float-start me-3">
                        <div>
                         <div class="mb-2">
                           <a href="profile/@comment.User.UserName">@comment.User.UserName</a>
                            <span>@comment.CommentPublishedOn.</span>
                         </div>
                         <p>@comment.CommentText</p>
                        </div>
                      </div>
                    }
                   
                    <hr class="my-4">

                    <form action="/posts/AddComment" method="post">
                     <input type="hidden" name="PostId" id="@Model.PostId" value="@Model.PostId">
                     <input type="hidden" name="Url" id="@Model.PostUrl" value="@Model.PostUrl">

                     <div class="mb-3 mx-3">
                      <label for="UserName" class="form-label">User name</label>
                      <input type="text" name="UserName" id="UserName" class="form-control">
                     </div>

                     <div class="mb-3 mx-3">
                      <label for="CommentText" class="form-label">Comment</label>
                     <textarea name="CommentText" rows="4" id="CommentText" class="form-control"></textarea>
                      </div>
                     <div class="mb-3 mx-3">
                        <button type="submit"class="btn btn-outline-danger">Add comment</button>
                     </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
           <vc:tags-menu></vc:tags-menu>
           <vc:new-posts></vc:new-posts>
            
    </div>
</div>